<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" id="airline-input" autocomplete="off">
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select">
      <option value="DEN">DEN</option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <option value="BOS">BOS</option>
      <option value="PHX">PHX</option>
      <option value="ORD">ORD</option>
      <option value="ATL">ATL</option>
      <option value="MIA">MIA</option>
      <option value="SEA">SEA</option>
    </select>
    <label for="flight-no-input">Flight Number:</label>
    <input type="number" name="flightNo" id="flight-no-input" required>
    <label for="departs-input">Departure Date:</label>
    <input type="datetime-local" name="departs" id="departs-input" value="<%= defaultDeparts %>">
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include('../partials/footer') %>